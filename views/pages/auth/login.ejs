<% extend('../../layouts/layout') %>

<section id="login">

    <div class="row w-100 m-0">

        <section id="first-section" class="col-md-6 col-lg-5 d-none d-md-block p-0">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img src="/images/login/workout-fitness-girl.jpg" class="d-block" alt="...">
                    <div class="carousel-item-body px-5 py-5">
                          <div>
                              <h2>Carol Hernandez</h2>
                              <h5 class="text-white mb-2">Premium subscriber</h5>
                              <p class="text-white">I have more then 2 years in FITNESS ONLINE as a online trainer. I can't spend a day without doing a online workout with one of the FITNESS ONLINE workout train videos.</p>
                          </div>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="/images/login/workout-fitness-coash.jpg" class="d-block" alt="...">
                    <div class="carousel-item-body px-5 py-5">
                        <div>
                          <h2>Lucie mylee</h2>
                          <h5 class="text-white mb-2">Professional fitness coach</h5>
                          <p class="text-white">I think the online workout train videos will replace the traditional workout in the gym. People enjoy doing workout from home without spend time going to gym.</p>
                        </div>
                    </div>
                  </div>
                  <div class="carousel-item">
                    <img src="/images/login/workout-fitness-coash2.jpg" class="d-block" alt="...">
                    <div class="carousel-item-body px-5 py-5">
                          <div>
                            <h2>Lucie mylee</h2>
                            <h5 class="text-white mb-2">Professional fitness coach</h5>
                            <p class="text-white">Having a online platform for online workout videos help a lot of people to train from their houses.</p>
                          </div>
                    </div>
                  </div>
                </div>
              </div>
        </section>

        <section id="second-section" class="col-md-6 col-lg-7 px-sm-5 pt-5">
                <h1 class="text-center mt-4">Sign in</h1>
                
                <div class="signin_with_google d-flex justify-content-center pt-5">
                  <button type="button" class="btn btn-dark rounded-pill d-flex justify-content-center align-items-center"><img src="/images/register/google-icon.png" alt="Google small logo" class="me-2"> Sign in with google</button>
                </div>

                <div class="hr_effect d-flex justify-content-center py-5">
                  <span></span>
                  <p class="mx-4">Or</p>
                  <span></span>
              </div>

              <% if (failed !== null && failed !== "undefined") { %>
                <div class="failed_messages px-3 px-sm-5 px-md-3 px-lg-5 mx-sm-4 mx-md-0 mx-lg-5">
                    <%- include('failedMsgs/failedMsgs.ejs', {message:failed}) %>
                </div>
              <% } %>

              <% if (sessionFlash && sessionFlash.message) { %>
                <div class="failed_messages px-3 px-sm-5 px-md-3 px-lg-5 mx-sm-4 mx-md-0 mx-lg-5">
                    <%- include('failedMsgs/failedMsgs.ejs', {message:sessionFlash.message}) %>
                </div>
              <% } %>
              

              <div class="signup_form px-3 px-sm-5 px-md-3 px-lg-5 mx-sm-4 mx-md-0 mx-lg-5">
                
                <%- include('login/form.ejs') %>

              </div>

              <div class="not_registered pt-5">
                  <p class="text-center">Don't have an account? <a href="/register">Signup</a></p>
              </div>

        </section>

    </div>

</section>
