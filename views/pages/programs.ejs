
<% extend('../layouts/layout') %>


<section id="programs-hero-section" class="d-flex justify-content-center align-items-center">

    <div class="row w-100 m-0 px-3 px-sm-5 pt-5">
        <div class="col-lg-6 pb-5 d-flex justify-content-center align-items-center flex-column">
            <h1 class="main_title w-100 text-start">PROGRAMS</h1>
            <h1 class="my-5">Start now your fitness journey with us.</h1>
        </div>

        <div class="col-lg-6">
            <img src="/images/programs/programs-hero-section.png" alt="">
        </div>
    </div>

</section>


<section id="all-programs" class="py-5 my-5 px-3 px-sm-5">

    <div class="px-sm-1 first_part">
        <h1>Our programs</h1>
    </div>

    <div class="row">
        <% if (programs !== null) { %>
            
            <% programs.forEach( (program) => { %>
                
                <div class="mt-5 col-md-6 col-lg-4 p-2">
                    <div id="card<%= program.id %>" class="card d-flex justify-content-between flex-row">
                        <img src="./images/programs/<%= program.image %>" class="" alt="<% program.programme %> by  a girl">
                        <div class="card-body d-flex justify-content-sm-center align-items-sm-center me-auto me-sm-0 flex-column">
                          <h5 class="card-title text-start w-100"><%= program.programme %></h5>
                          <p class="card-text text-start text-white py-2 w-100"><%= program.videos %> videos | <%= program.weeks %> weeks | +<%= program.trainers %>k trainers.</p>
                          <div class="w-100">
                            <a href="/programs/details/<%= program.id %>" class="text-white btn btn-light text-dark d-flex justify-content-start align-items-center">
                               More details
                               <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-arrow-right ms-1 programs_link" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
                              </svg>
                            </a>
                          </div>
                        </div>
                    </div>
                </div>

            <% }) %>

        <% } else { %> 
            <section id="search-not-found" class="d-flex justify-content-center align-items-center flex-column">
                <div class="my-5">
                    <svg xmlns="http://www.w3.org/2000/svg" width="130" height="130" fill="currentColor" class="bi bi-emoji-frown" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/>
                    </svg>
                </div>
                <h1>No program found. Try again later.</h1>
            </section>
        <% } %>
    </div>

</section>


